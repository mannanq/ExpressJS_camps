<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Add New Comment to <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group w-50 m-auto py-5">
            <input type="text" placeholder="text" name="comment[text]" class="form-control">
            <input type="text" placeholder="author" name="comment[author]" class="form-control mt-5">
            <button class="btn btn-success btn-block mt-5">Submit</button>
        </div>
    </form>
</div> 

