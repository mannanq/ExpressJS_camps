<% include ../partials/header %>
<div class="container">
    

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Browse through the hand-picked campgrounds</p>
            <a class="btn btn-outline-success" href="/campgrounds/new">Add a new campground</a>
        </div>
    </header>

    <div class="row">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col">
                <div class="card m-5 d-flex align-items-stretch" style="width: 20rem;">
                    <img class="card-img-top img-thumbnail card-img img-fluid" src="<%= camp.image %>">
                        <div class="card-body text-center">
                            <h4><%= camp.name %></h4>
                            <p>
                                <a href="/campgrounds/<%= camp._id %>" class="btn btn-outline-success">More Info</a>
                            </p>
                        </div>                        
                </div>
            </div>
        <% }); %>
    </div>

</div>


<% include ../partials/footer %>
